.seo
  margin-bottom: 80px;

  @media mobile
    margin-bottom: 40px;

  &__wrapper
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;

    @media mobile
      flex-direction: column;
      align-items: flex-start;
      gap: 25px;

  &__banner
    @media mobile
      width: 100%;

    &--image
      @media mobile
        padding: 0 15px;
        width: 100%;

      &.desktop
        @media mobile
          display: none;

      &.mobile
        @media desktop
          display: none;

  &__info
    max-width: 420px;

  &__title
    margin-bottom: 15px;
    color: #000000;
    font-weight: 700;
    font-size: 24px;
    line-height: 37px;

  &__text
    color: #000000;
    font-weight: 400;
    font-size: 14px;
    line-height: 21px;

    @media mobile
      overflow: hidden;
      max-width: 270px;
      max-height: 170px;
