.copyright
  padding: 20px 0;
  background: #353535;

  @media $grid
    padding: 20px 15px;

  &__container
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    max-width: 1600px;
    width: 100%;

    @media mobile
      flex-direction: column;
      gap: 35px;

  .social
    display: flex;
    align-items: center;
    gap: 20px;

    > a
      display: flex;

      svg
        transition: $transition;
        fill: #ffffff;

      &:hover
        svg
          fill: $yellow;

  .payment
    &__wrapper
      display: flex;
      align-items: center;
      gap: 20px;

  .signature
    display: flex;
    gap: 20px;

    .powered, .developed
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      color: #ffffff;
      font-weight: 400;
      font-size: 10px;
      line-height: 14px;

      img
        @media mobile
          opacity: 0.7;
