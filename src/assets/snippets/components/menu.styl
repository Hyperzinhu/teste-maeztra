.menu
  background: #ffffff;
  transition: all ease-in-out 0.2s;

  @media $grid
    padding: 0 15px;

  @media mobile
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    visibility: hidden;
    padding: 0;
    width: 100%;
    height: 100vh;
    background: rgba(#000000, 40%);
    opacity: 0;

    .on-menu &
      visibility: visible;
      opacity: 1;

      .menu__container
        transform: translateX(0);

  .moving--down &
    @media desktop
      transform: translateY(-100%);

  &__topbar
    @media dekstop
      display: none;

    @media mobile
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      margin-bottom: 25px;
      height: 60px;
      border-bottom: 1px solid #EDEDED;

      &:before
        order: 1;
        width: 1px;
        height: 100%;
        background: #ededed;
        content: "";

      .menu__account, .menu__wishlist
        > a
          display: flex;
          align-items: center;
          color: #353535;
          gap: 5px;

      .menu__account
        order: -1;

      .menu__wishlist
        order: 2;

  &__close, &__mobile, &__wishlist, &__account
    @media desktop
      display: none;

  &__close
    @media mobile
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 60px;
      background: $yellow;
      transform: translateX(100%);

      svg
        pointer-events: none;

  &__container
    margin: 0 auto;
    max-width: 1220px;

    @media mobile
      margin: 0;
      width: 335px;
      height: 100vh;
      background: #ffffff;
      transition: all ease-in-out 0.4s;
      transform: translateX(-100%);

  &__list
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;

    @media mobile
      flex-direction: column;
      align-items: flex-start;
      padding: 0 15px;
      gap: 20px;

  &__item
    > a
      display: flex;
      align-items: center;
      color: #353535;
      font-weight: 400;
      font-size: 14px;
      transition: $transition;

      svg
        margin-right: 5px;

    &:hover
      > a
        color: $yellow;

    &.menu__highlight
      > a
        color: $yellow;
