.showcase
  margin-bottom: 80px;

  &__title
    margin-bottom: 25px;
    color: #353535;
    text-align: center;
    font-weight: 700;
    font-size: 32px;
    line-height: 49px;

    @media mobile
      margin-bottom: 15px;
      font-size: 24px;
      line-height: 37px;

  &__wrapper
    @media mobile
      margin: 0 -15px;

    &:not(.slick-initialized)
      display: flex;
      align-items: center;
      gap: 15px;

    &.slick-initialized
      @extend $arrows;

      .slick-list
        @media mobile
          margin-left: 15px;
          padding-right: 20px;

      .slick-arrow
        &.slick-next
          right: 0;

        &.slick-prev
          left: 0;

      .spot
        margin-right: 15px;

  .spot
    @media desktop
      max-width: 310px;

    &__image
      margin-bottom: 10px;

      @media mobile
        max-width: 310px;

        img
          margin: 0 auto;

    &__content
      padding: 0 25px;

      @media mobile
        max-width: 310px;

    &__variant
      &--list
        display: flex;
        align-items: center;
        gap: 10px;

      &--item
        width: 25px;
        height: 25px;
        border-radius: 4px;

    &__price
      color: #353535;
      font-weight: 700;
      font-style: normal;
      font-size: 20px;
      line-height: 30px;

    &__title
      margin-bottom: 10px;
      color: #000000;
      font-weight: 400;
      font-size: 16px;
      line-height: 24px;

    &__subtitle
      margin-bottom: 10px;
      color: #8d8d8d;
      font-weight: 400;
      font-size: 12px;
      line-height: 18px;

    &__buy
      width: 100%;
      height: 35px;
      border: none;
      border-radius: 4px;
      background: #FAA500;

      span
        color: #ffffff;
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;