#popup
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  display: flex;
  visibility: hidden;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100vh;
  background: rgba(#000000, 70%);
  opacity: 0;
  transition: all ease-in-out 0.3s;

  body.on-popup &
    visibility: visible;
    opacity: 1;

  .popup
    &__modal
      position: relative;
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 850px;
      background: #ffffff;

    &__image
      display: flex;

    &__content
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 0 50px;

      > svg
        margin-bottom: 10px;

      > span
        margin-bottom: 10px;
        color: #464B54;
        font-weight: 400;
        font-size: 12px;
        line-height: 20px;

      > p
        margin-bottom: 25px;
        color: #787D83;
        text-align: center;
        font-weight: 400;
        font-size: 20px;
        line-height: 23px;

    &__form
      display: flex;
      flex-direction: column;
      width: 325px;

      input, button
        width: 100%;
        height: 40px;
        border-radius: 10px;

      input
        margin-bottom: 15px;
        padding: 0 15px;
        border: 1px solid #C4C4C4;
        color: #787D83;
        font-weight: 400;
        font-size: 12px;

        &::placeholder
          color: #787D83;
          font-weight: 400;
          font-size: 12px;

      button
        display: flex;
        justify-content: center;
        align-items: center;
        border: none;
        background-color: $yellow;
        cursor: pointer;

        span
          display: flex;
          align-items: center;
          color: #ffffff;
          font-weight: 700;
          font-size: 12px;
          line-height: 20px;
          gap: 5px;

    &__close
      position: absolute;
      top: -5px;
      right: 0;
      cursor: pointer;
      transform: translateY(-100%);

      > span
        color: #ffffff;
        font-weight: 400;
        font-size: 12px;
        line-height: 20px;
        pointer-events: none;
