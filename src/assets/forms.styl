
$input
    padding: 0 25px;
    height: 40px;
    line-height: 40px;

input
    &[type=text], &[type=password], &[type=email], &[type=tel]
        @extend $input;
        border: 1px solid #353535;

    &:focus::placeholder
        color: transparent;

textarea
    padding: 15px;
    border: solid 1px rgba(0, 0, 0, 0.1);
